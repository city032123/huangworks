extends layout.pug

block content
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ← Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-12.medium-9.large-9
        h1= data[id].project_name
        br
        p.lead.text-light= data[id].description
      .cell.portfolio-meta.small-12.medium-2.large-3
        h3 使用技术
        ul.h4
          each val in data[id].technologies
            li= val
        a.portfolio-link(href=`${data[id].live_link}`, target="_blank")
          i.fab.fa-chrome
          | 线上展示
    img.image(src=`${data[id].image_urls[1]}`)