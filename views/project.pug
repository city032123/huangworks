extends layout.pug

block content
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ← Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-12.medium-9.large-9
        h1= data[id].project_name
        br
        p.lead.text-light= data[id].description
      .cell.portfolio-meta.small-12.medium-2.large-3
        h3 使用技术
        ul.h4
          each val in data[id].technologies
            li= val
        a.portfolio-link(href=`${data[id].live_link}`, target="_blank")
          i.fab.fa-chrome
          | 线上展示
    .image
      
      img(src=`${data[id].image_urls[1]}`)
      img(src=`${data[id].image_urls[2]}`)
      img(src=`${data[id].image_urls[3]}`)
      img(src=`${data[id].image_urls[4]}`)
      img(src=`${data[id].image_urls[5]}`)
      img(src=`${data[id].image_urls[6]}`)
      
      .lottieoutline
        lottie-player(src=`${data[id].lottie_urls}` background='transparent' speed='1' style=`${data[id].lottie_style}` loop  autoplay='')
      
      iframe(width=`${data[id].video_w}` height=`${data[id].video_h}` src=`${data[id].video_urls}` frameborder='0' allow='autoplay; encrypted-media' allowfullscreen='')

    lottie-player(src=`https://assets2.lottiefiles.com/packages/lf20_cs8w6kqf.json` background='transparent' speed='1' style='width: 100%; height: 40px;' loop  autoplay='')